<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<title>Insert title here</title>
<style type="text/css">
#it{
	width:  40px;
}
</style>
<script type="text/javascript">
document.addEventListener("DOMContentLoaded", () => {
	const input = document.getElementById("it");
	const tarea = document.getElementById("ta");
	const btn = document.querySelector('input[type="button"]');
	
	 btn.addEventListener("click", () => {
		  const num = parseInt(input.value); // 입력값을 숫자로 변환
	        let str = "";
	        
		
	            for (let i = 1; i <= 9; i++) {
	              str += `${num} x ${i} = ${num * i}\n`;
	            }
	        

	          tarea.value = str; // 결과 출력
		  
		  });
})
</script>
</head>
<body>
	<table border="1px">
		<tr>
			<td>출력단수</td>
			<td>
				<input type="text" id="it">
			</td>
		</tr>
		<tr>
			<td colspan="2">
				<input type="button" value="출력하기" />
			</td>
		</tr>
		<tr>
			<td colspan="2">
				<textarea rows="13" cols="17" id="ta"></textarea>
			</td>
		</tr>
	</table>
</body>
</html>